import cffi

sdl = cffi.library 'libSDL.so' 'SDL/SDL.h'


res = sdl.SDL_Init sdl.SDL_INIT_VIDEO
println "sdl video initialized with value" res 

sdl.SDL_Quit.
println "sdl quit"

